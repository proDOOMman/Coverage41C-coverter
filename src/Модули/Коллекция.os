Функция ВКоллекцию(Значение) Экспорт

	Результат = Значение;
	Если ТипЗнч(Значение) = Тип("Структура") Тогда
		Результат = ВМассиве(Значение);	
	КонецЕсли;	

	Возврат Результат;
	
КонецФункции	

Функция ВМАссиве(Значение) Экспорт

	Результат = Новый Массив();
	Результат.Добавить(Значение);

	Возврат Результат;

КонецФункции	